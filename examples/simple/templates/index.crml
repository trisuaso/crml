- let a = page.a
- let b = 2

%div.class#id[attr="value"]
    a is {a}, b is {b}

- if a != b {
    %h1= a is not equal to b ({a} != {b})

    // include other template
    = other(OtherProps { c: b + 1 })

    // elements which may use special characters need to include "end" to close them
    // (script, style)
    %script
        alert("Hello, world!");

        function test(a, b) {
            return a + b;
        }
    end
- }
